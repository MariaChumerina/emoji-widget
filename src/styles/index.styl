@import "colors.styl";
@import "sizes.styl";
@import "emoji-categories.styl";

.input-block {
    width: 800px;
    margin: 8px 0;
    position: relative;
}

.input-field {
    width: 100%;
    display: inline-block;
    border: solid 1px $inputBorderColor;
    box-shadow: inset 0 1px 3px #ddd;
    border-radius: 4px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding-top: $inputVerticalPadding;
    padding-bottom: $inputVerticalPadding;
    padding-left: $inputHorizontalPadding;
    padding-right: ($inputHorizontalPadding + $emojiSize)
}

.widget {
    background: $backgroundColor;
    width: 300px;
    float: right;
    padding: 15px 20px;
    border-radius: 0 0 5px 5px;
}

.widget-button {
    background: url('../images/main-emodji.svg');
    background-repeat: no-repeat;
    background-size: $emojiSize $emojiSize;
    height: $emojiSize;
    width: $emojiSize;
    opacity: .6;
    border: none;
    font-size: $emojiSize;
    cursor: pointer;
}

.widget-button:focus {
    outline: none;
}

.widget-button:hover {
    opacity: 1;
}

.widget-button-position {
    position: absolute;
    right: ($inputVerticalPadding / 2);
    top: ($inputVerticalPadding / 2);
}

.widget-hidden {
    display: none;
    transition: opacity 150ms ease-in-out,visibility 150ms ease-in-out 150ms;
}

.widget-navigation {
    margin-bottom: 20px;

    .widget-tabs {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;

        .tab-item {
            width: 20px;
            height: 20px;
            opacity: .7;
            border: none;
            outline: none;
            cursor: pointer;

            &:hover {
                opacity: 0.4;
            }
        }
    }

    .search-field {
        display: flex;
        align-items: center;

        .search-input {
            width: 100%;
            border: solid 1px $inputBorderColor;
            border-radius: 2px;
            box-sizing: border-box;
            padding: 4px 6px;

            &:focus,
            &:active {
                border-color: darken($inputBorderColor, 20);
                outline: none;
            }
        }

        .search-button {
            background: url('../images/search.svg') no-repeat;
            border: none;
            width: 20px;
            height: 20px;
            opacity: .3;
            cursor: pointer;
            outline: none;
            margin-left: -24px;

            &:hover {
                opacity: 0.2;
            }
        }
    }
}

.emoji-container {
    display: grid;
    grid-template-columns: repeat(9, 1fr);
    grid-auto-rows: 32px;
    width: calc(100% + 17px);
    height: 190px;
    overflow-y: scroll;
    font-size: 18px;

    &> span {
        cursor: pointer;
        line-height: 32px;
        text-align: center;
        border-radius: 2px;

        &:hover {
            background: darken($backgroundColor, 5);
        }
    }
}
